<Window x:Class="ListWorkes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ListWorkes"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="22*"/>
            <RowDefinition Height="195*"/>
        </Grid.RowDefinitions>
        <StackPanel Margin="0,0,35,235" Grid.RowSpan="2" Height="177" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="705">
            <ComboBox Margin="-500,5,35,0" x:Name="__cbListWorkes" Width="172" Height="24" Loaded="__cbListWorkes_Loaded" SelectionChanged="__cbListWorkes_SelectionChanged"/>
            <ComboBox Margin="500,-24,0,0" x:Name="__cbListDepartment" Width="172" Loaded="__cbListDepartment_Loaded" DropDownOpened="__cbListDepartment_DropDownOpened" SelectionChanged="__cbListDepartment_SelectionChanged"/>
        </StackPanel>
        <TextBox x:Name="__tbСhangesWorkes"  HorizontalAlignment="Right" Margin="0,295,580,0" Grid.Row="1" Text="TextBox" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" IsEnabled="False"/>
        <TextBox x:Name="__tbСhangesDepar" HorizontalAlignment="Left" Margin="620,295,0,0" Grid.Row="1" Text="TextBox" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" IsEnabled="False"/>


    </Grid>
</Window>
